#version 450

layout(local_size_x = 64, local_size_y = 1, local_size_z = 1) in;

struct planet_struct {
    vec3 pos;
    vec3 acceleration;
    float mass;
    float rad;
};

layout(set = 0, binding = 0) buffer Data {
    planet_struct buf[];
} buf;

void main() {
    uint idx = gl_GlobalInvocationID.x;
    buf.buf[idx.x].pos.y += 0.1;
}